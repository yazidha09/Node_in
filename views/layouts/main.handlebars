            <p>&copy; 2025 Système d'Inscription aux Stages. Tous droits réservés.</p>
        </div>
    </footer>
    
    <script>
        // Script pour valider les formulaires côté client
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.querySelector('form');
            if (form) {
                form.addEventListener('submit', function(e) {
                    let hasErrors = false;
                    
                    // Valider le nom
                    const nom = document.getElementById('nom');
                    if (nom && !nom.value.trim()) {
                        showError(nom, 'Le nom est obligatoire');
                        hasErrors = true;
                    }
                    
                    // Valider le prénom
                    const prenom = document.getElementById('prenom');
                    if (prenom && !prenom.value.trim()) {
                        showError(prenom, 'Le prénom est obligatoire');
                        hasErrors = true;
                    }
                    
                    // Valider l'email
                    const email = document.getElementById('email');
                    if (email) {
                        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                        if (!email.value.trim()) {
                            showError(email, 'L\'email est obligatoire');
                            hasErrors = true;
                        } else if (!emailRegex.test(email.value)) {
                            showError(email, 'Adresse email invalide');
                            hasErrors = true;
                        }
                    }
                    
                    // Valider le téléphone
                    const telephone = document.getElementById('telephone');
                    if (telephone) {
                        const telRegex = /^[0-9+\s]+$/;
                        if (!telephone.value.trim()) {
                            showError(telephone, 'Le téléphone est obligatoire');
                            hasErrors = true;
                        } else if (!telRegex.test(telephone.value)) {
                            showError(telephone, 'Format de téléphone invalide');
                            hasErrors = true;
                        }
                    }
                    
                    // Valider le niveau d'études
                    const niveauEtudes = document.getElementById('niveauEtudes');
                    if (niveauEtudes && !niveauEtudes.value) {
                        showError(niveauEtudes, 'Le niveau d\'études est obligatoire');
                        hasErrors = true;
                    }
                    
                    // Valider la spécialité
                    const specialite = document.getElementById('specialite');
                    if (specialite && !specialite.value.trim()) {
                        showError(specialite, 'La spécialité est obligatoire');
                        hasErrors = true;
                    }
                    
                    // Valider les dates
                    const dateDebut = document.getElementById('dateDebut');
                    const dateFin = document.getElementById('dateFin');
                    
                    if (dateDebut && !dateDebut.value) {
                        showError(dateDebut, 'La date de début est obligatoire');
                        hasErrors = true;
                    }
                    
                    if (dateFin && !dateFin.value) {
                        showError(dateFin, 'La date de fin est obligatoire');
                        hasErrors = true;
                    } else if (dateDebut && dateFin && new Date(dateFin.value) <= new Date(dateDebut.value)) {
                        showError(dateFin, 'La date de fin doit être postérieure à la date de début');
                        hasErrors = true;
                    }
                    
                    if (hasErrors) {
                        e.preventDefault();
                    }
                });
            }
            
            // Fonction pour afficher les erreurs
            function showError(input, message) {
                const parentElement = input.parentElement;
                const errorElement = parentElement.querySelector('.error-message') || document.createElement('div');
                
                errorElement.className = 'error-message text-red-500 text-sm mt-1';
                errorElement.textContent = message;
                
                if (!parentElement.querySelector('.error-message')) {
                    parentElement.appendChild(errorElement);
                }
                
                input.className = input.className + ' border-red-500';
            }
        });
    </script>
